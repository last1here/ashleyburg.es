<ul class="postlist">
  {% for post in postslist %}
    <li class="postlist-item{% if post.data.note %} postlist-item-note{% endif %}">
      {% if post.data.note %}
          <h2>{{ post.data.title | orphanWrap | safe }}</h2>
          <small class="external-mark">(note)</small>
          <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
          <div class="postlist-summary">
            {{ post.templateContent | safe }}
          </div>
      {% else %}
        {% if post.data.externalurl %}
          <h2><a href="{{ post.data.externalurl }}">{{ post.data.title | orphanWrap | safe }}</a></h2> <small class="external-mark">(external)</small>
        {% else %}
          <h2><a href="{{ post.url | url }}" class="postlist-link">{{ post.data.title | orphanWrap | safe }}</a></h2>
        {% endif %}
        <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
        {# {% for tag in post.data.tags %}
          {%- if collections.tagList.indexOf(tag) != -1 -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
          {%- endif -%}
        {% endfor %} #}

        {% if post.data.description %}
          <p class="postlist-summary">{{ post.data.description }}</p>
        {% endif %}
      {% endif %}
    </li>
  {% endfor %}
</ul>
