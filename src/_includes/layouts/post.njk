---
templateClass: tmpl-post
---

{% extends 'layouts/base.njk' %}

{% block heading %}
  <h1>{{ title | orphanWrap | safe }}</h1>

  <div class="intro">
    <span class="postlist-meta">
      <time class="postlist-date" datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
      <span class="postlist-reading">{{ content | readingTime }}</span>
    </span>

    <ul class="tags">
      {% for tag in tags -%}
        <li>
          <a href="/tags/{{ tag }}" class="tag">#{{ tag }}</a>
        </li>
      {% endfor -%}
    </ul>
  </div>
{% endblock %}

{% block content %}
  <article>
    {{ content | safe }}
  </article>
{% endblock %}

{% block footer %}
  <p>
    <a href="{{ '/' | url }}">‚Üê Home</a>
  </p>
{% endblock %}
